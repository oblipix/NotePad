{
  "name": "notepad",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "i18next": "^24.0.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "marked": "^15.0.2"
  },
  "build": {
    "appId": "com.notepad.app",
    "productName": "Notepad",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/icon/np.ico"
    },
    "linux": {
      "icon": "src/icon.png"
    },
    "mac": {
      "icon": "src/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
